<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div class="card w-50 text-center text-white", style="background-color: #000000">
      <div class="card-body">
        <h5 class="card-title">
            <div class="form-group" >
              <%= form.text_field :title, class:"form-control", placeholder:"Title", style:"background-color: black; color: white;" %>
          </div>
        </h5>
        <p class="card-text" id="card-text" >
            <div class="form-group" >
              <%= form.text_area :content, class:"form-control", id:"exampleFormControlTextarea1", rows:"16", placeholder:"Content", style:"background-color: black; color: white;" %>
            </div>
            <div class="custom-control custom-switch float-left">
              <%= form.check_box :anonymous, class:"custom-control-input anonymous", id:"anonymousSwitch"%>
              <label class="custom-control-label" for="anonymousSwitch">Anonymous</label>
            </div>
            <br/>
            <div class="custom-control custom-switch float-left">
              <%= form.check_box :graphic, class:"custom-control-input graphic", id:"graphicSwitch"%>
              <label class="custom-control-label" for="graphicSwitch">Graphic (gore/violence)</label>
            </div>
            <!-- I opted to submit the user_id within the create method in the post controller
                so that one cannot use inspect element to bypass restrictions -->
            <!--<div class="form-group" > 
              <%= form.number_field :user_id, id: :post_user_id, value:current_user.id, type: :hidden  %>
            </div>-->
            <br/>
            <br/>
            <div>
              <%= form.submit "Post", class:"btn btn-outline-primary savebtn" %>
              <%= link_to 'Back', root_path, class:"btn btn-outline-primary savebtn" %>
            </div>  
        </p>
      </div>
    </div>


<% end %>
